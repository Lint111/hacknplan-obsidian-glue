{
  "name": "hacknplan-obsidian-glue",
  "version": "2.0.0",
  "description": "MCP server that syncs HacknPlan and Obsidian vault documentation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hacknplan-obsidian-glue": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "chokidar": "^5.0.0",
    "diff": "^8.0.2",
    "gray-matter": "^4.0.3",
    "lodash.debounce": "^4.0.8",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/chokidar": "^1.7.5",
    "@types/diff": "^7.0.2",
    "@types/jest": "^29.5.14",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.5.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "mcp",
    "hacknplan",
    "obsidian",
    "sync",
    "project-management"
  ],
  "author": "",
  "license": "MIT"
}
